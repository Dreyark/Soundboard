        <Button x:Name="ButtonBind" Content="click to set bind" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Height="102" Width="168" PreviewMouseLeftButtonDown="TextBlock_MouseLeftButtonDown" KeyDown="ButtonBind_KeyDown" KeyUp="ButtonBind_KeyUp"/>


    </Grid>
</Window>
